{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "星TAP 极速搜索",
  "version": "0.1.0",
  "identifier": "com.xtap.file-search-gui",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "星TAP 极速搜索",
        "label": "main",
        "width": 900,
        "height": 650,
        "decorations": true,
        "transparent": false,
        "center": true,
        "resizable": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "星TAP 极速搜索 CLI",
      "args": [
        {
          "name": "query",
          "index": 1,
          "description": "搜索关键词",
          "takesValue": true
        },
        {
          "name": "type",
          "short": "t",
          "description": "搜索类型 (all, image, video, app, etc.)",
          "takesValue": true
        }
      ]
    }
  }
}
